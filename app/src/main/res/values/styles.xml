<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colourBackgroundPrimary">@color/floralWhite</item>
    </style>

    <style name="RegularFontStyle">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:layout_weight">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RegularButtonStyle">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">@dimen/regularButtonHeight</item>
<!--Following radius setting only applies to API 28+-->
        <item name="android:buttonCornerRadius" tools:targetApi="p">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/muli_semi_bold</item>
        <item name="android:elevation">@dimen/largeElevation</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
