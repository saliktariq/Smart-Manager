<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBgPrimary">@color/floralWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="RegularFontStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RegularButtonStyle">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">@dimen/regularButtonHeight</item>
<!--Following radius setting only applies to API 28+-->
        <item name="android:buttonCornerRadius" tools:targetApi="p">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/floralWhite</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:fontFamily">@font/muli_semi_bold</item>
        <item name="android:elevation">@dimen/largeElevation</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
